<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn"
        android:backgroundTint="#F4F4F4"
        android:orientation="vertical"
        >
        <ScrollView
            android:padding="15dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Customer Details"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Full Name"/>
                <EditText
                    android:id="@+id/txt_fullName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/black"
                    android:background="@drawable/btn"
                    android:backgroundTint="@color/white"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"

                    android:text="Email"/>
                <EditText
                    android:id="@+id/txt_Email"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="50dp"
                    android:background="@drawable/btn"
                    android:backgroundTint="@color/white"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Confirm Email"/>
                <EditText
                    android:id="@+id/txt_ConfirmEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/black"
                    android:background="@drawable/btn"
                    android:backgroundTint="@color/white"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Password"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="- must be at least 6 characters \n- must contain one or more numbers"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/txt_Password"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="50dp"
                    android:background="@drawable/btn"
                    android:backgroundTint="@color/white"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Confirm Password"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="- password must match"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/txt_ConfirmPassword"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="50dp"
                    android:background="@drawable/btn"
                    android:backgroundTint="@color/white"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Phone Number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="(Optional) \n\nGet text notificatyion for ratings changes and event information"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"
                        android:hint="+91"
                        android:paddingStart="10dp"
                        />
                    <EditText
                        android:id="@+id/txt_Phone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/btn"
                        android:layout_marginLeft="15dp"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"
                        android:paddingStart="10dp"
                        android:hint="Phone Number"/>
                </LinearLayout>


                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Address"/>
                <EditText
                    android:id="@+id/txt_Address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/btn"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Review Policies"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="25dp"
                    android:text="I have read and agree to the Terms of Service and Privacy Policy"/>

                <Button
                    android:id="@+id/btn_finish"
                    android:layout_width="79dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn"
                    android:backgroundTint="#00a5ff"
                    android:padding="0dp"
                    android:text="Finish"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>